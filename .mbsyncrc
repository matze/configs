IMAPAccount kit
    Host imap.kit.edu
    UseIMAPS yes
    User matthias.vogelgesang@kit.edu
    PassCmd "keyring-query --service mbsync --user matthias.vogelgesang@kit.edu"

IMAPStore kit-remote
    Account kit

MaildirStore kit-local
    Path ~/mail/kit/
    Inbox ~/mail/kit/INBOX

Channel kit.edu
    Master :kit-remote:
    Slave :kit-local:
    Patterns "INBOX" "Sent" "Drafts" "Archives/*" "astor" "sardana-*" "tango" "vimprovements" "ufo*"
    Create Both
    Expunge Both
    SyncState *


IMAPAccount gmail
    Host imap.gmail.com
    User matthias.vogelgesang@gmail.com
    UseIMAPS yes
    PassCmd "keyring-query --service mbsync --user matthias.vogelgesang@gmail.com"
    CertificateFile /etc/ssl/certs/ca-certificates.crt

IMAPStore gmail-remote
    Account gmail

MaildirStore gmail-local
    Path ~/mail/gmail/
    Inbox ~/mail/gmail/INBOX
    Trash Trash

Channel gmail-inbox
    Master :gmail-remote:
    Slave :gmail-local:
    Patterns "INBOX"
    Create Both
    Expunge Both
    SyncState *

Channel gmail-archives
    Master :gmail-remote:"[Gmail]/All Mail"
    Slave :gmail-local:Archives
    Create Both
    Expunge Both
    SyncState *

Channel gmail-sent
    Master :gmail-remote:"[Gmail]/Sent Mail"
    Slave :gmail-local:Sent
    Create Both
    Expunge Both
    SyncState *

Channel gmail-drafts
    Master :gmail-remote:"[Gmail]/Drafts"
    Slave :gmail-local:Drafts
    Create Both
    Expunge Both
    SyncState *

Channel gmail-lists
    Master :gmail-remote:
    Slave :gmail-local:
    Patterns "ranger-users"
    Create Slave
    Expunge Both
    SyncState *

Channel gmail-trash
    Master :gmail-remote:"[Gmail]/Trash"
    Slave :gmail-local:Trash
    Create Both
    SyncState *

Group gmail.com
    Channel gmail-inbox
    Channel gmail-drafts
    Channel gmail-trash


Group inboxes
    Channel kit.edu:INBOX
    Channel gmail-inbox
    Channel gmail-trash
