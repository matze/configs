# vim: set ft=muttrc

set from                = 'matthias.vogelgesang@kit.edu'
set spoolfile           = '+kit/INBOX'
set record              = '=kit/Sent'
set postponed           = '=kit/Drafts'
set mbox                = '=kit/Archives/.2014'
set signature           = '~/.mutt/signature.kit.edu'

set pgp_sign_as         =

macro index,pager A ":set confirmappend=no<enter> <tag-prefix><save-message>=kit/Archives/.2014 <enter>:set confirmappend=yes<enter>"

folder-hook $folder/kit         "macro index,pager $ '<sync-mailbox><shell-escape>mbsync kit.edu<enter><sync-mailbox>'"
folder-hook $folder/kit/INBOX   "macro index,pager $ '<sync-mailbox><shell-escape>mbsync kit.edu:INBOX<enter><sync-mailbox>'"

mailboxes +kit \
          +kit/INBOX \
          +kit/Sent \
          +kit/Drafts \
          +kit/astor \
          +kit/sardana-devel \
          +kit/sardana-users \
          +kit/ufo \
          +kit/ufo-devel \
          +kit/vimprovements \
          +kit/Archives/.2014
