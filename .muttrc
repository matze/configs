set header_cache        = ~/.mutt/cache/headers
set message_cachedir    = ~/.mutt/cache/bodies
set signature           = ~/.mutt/signature
set alias_file          = ~/.mutt/aliases
set editor              = "/usr/bin/vim +/^$"
set realname            = "Matthias Vogelgesang"

set mbox_type           = Maildir
set folder              = ~/.mail
set spoolfile           = "+GMail/INBOX"
set envelope_from       = yes
set sleep_time          = 0                 # no "mailbox unchanged"
set mail_check          = 60

unset move
unset confirmappend
set delete
set quit
set sig_dashes
set fast_reply
set include             = yes               # always quote when replying

set pager_index_lines   = 6
set pager_context       = 3
set sort                = threads
set sort_aux            = reverse-last-date-received

set query_command       = "~/.local/bin/query.sh '%s'"

alternative_order       text/enriched text/plain text/html
auto_view               text/html

ignore *
unignore from date to cc subject
hdr_order From Date: From: To: CC: Subject:

source $alias_file
source ~/.mutt/gmail.muttrc

folder-hook GMail/* source ~/.mutt/gmail.muttrc
mailboxes +GMail/INBOX +GMail/all_mail +GMail/sent +GMail/drafts +GMail/spam +GMail/trash

folder-hook FZK/* source ~/.mutt/fzk.muttrc

macro index <F8> \
      "<enter-command>unset wait_key<enter><shell-escape>notmuch-mutt --prompt search<enter><change-folder-readonly>`echo ${XDG_CACHE_HOME:-$HOME/.cache}/notmuch/mutt/results`<enter>" \
      "notmuch: search mail"
macro index <F9> \
      "<enter-command>unset wait_key<enter><pipe-message>notmuch-mutt thread<enter><change-folder-readonly>`echo ${XDG_CACHE_HOME:-$HOME/.cache}/notmuch/mutt/results`<enter><enter-command>set wait_key<enter>" \
      "notmuch: reconstruct thread"
macro index <F6> \
      "<enter-command>unset wait_key<enter><pipe-message>notmuch-mutt tag -inbox<enter>" \
      "notmuch: remove message from inbox"

bind pager      k       previous-line
bind pager      j       next-line 
bind pager      /       search
bind pager      gg      top
bind pager      G       bottom
bind pager      R       group-reply

bind index      gg      first-entry
bind index      G       last-entry
bind index      K       previous-unread
bind index      J       next-unread 
bind index      R       group-reply

color index     brightyellow    black ~N
color index     yellow          black ~O
color index     magenta         black ~F
color index     blue            black ~T
color index     red             black ~D
color index     white           black ~R
